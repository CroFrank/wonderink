<div id="map-container">
  <p>
    Kartu omogućuje tvrtka Google LLC. Učitavanjem karte, pristajete na
    google-ovu
    <a
      href="https://policies.google.com/privacy"
      class="text-blue-500"
      target="_blank">politiku privatnosti</a
    > i
    <a
      href="https://policies.google.com/technologies/cookies"
      class="text-blue-500"
      target="_blank">kolačiće</a
    >. Više informacija možete pronaći u našoj
    <a href="/politika-privatnosti" class="text-blue-500" target="_blank"
      >politici o privatnosti</a
    >.
  </p>
  <button
    id="accept-map"
    class="mt-6 tracking-wider bg-red-700 hover:bg-red-800 text-white font-semibold py-3 px-2 rounded-lg"
    >Učitaj kartu</button
  >
</div>

<div id="map-wrapper" style="display: none;">
  <div class="neon-box-pink p-8 rounded-lg shadow-lg bg-black">
    <h2 class="text-2xl font-bold mb-6">Kako do nas</h2>
    <div class="w-full h-80 rounded-lg overflow-hidden">
      <iframe
        id="google-map"
        src=""
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      >
      </iframe>
    </div>
  </div>
</div>
<script>
  document.getElementById("accept-map")!.addEventListener("click", function () {
    document.getElementById("map-container")!.style.display = "none"
    document.getElementById("map-wrapper")!.style.display = "block"
    document
      .getElementById("google-map")!
      .setAttribute(
        "src",
        "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d640.0476155205254!2d16.073829133203322!3d45.71436196033197!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47667f4012cf2865%3A0xe5e2ad72e74df4d!2sWonderink%20Tattoo!5e1!3m2!1shr!2shr!4v1741985593177!5m2!1shr!2shr"
      )
  })
</script>
