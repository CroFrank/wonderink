---
import { Image } from "astro:assets"
import HeroImg from "../assets/images/hero.webp"
---

<section
  class="relative w-full overflow-hidden flex items-center justify-center bg-gray-900 max-h-screen"
>
  <Image
    src={HeroImg}
    alt="Tattoo, Piercing i Barber Shop usluge"
    width={2500}
    height={1667}
    class="object-cover w-full h-full"
  />

  <div class="absolute inset-x-0 bottom-[20%] flex items-center justify-center">
    <button
      class="bg-transparent border-2 border-white text-white font-bold py-2 px-6 transition-all duration-300 transform hover:bg-white hover:border-white hover:text-black hover:scale-105 animate-fade-in tracking-wider text-[12px] sm:text-lg lg:text-xl lg:py-4 lg:px-12"
    >
      KONTAKT
    </button>
  </div>
</section>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 1s ease-out forwards;
  }
</style>
