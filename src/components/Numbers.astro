---
import { Image } from "astro:assets"
import Gloria from "../assets/images/gloria.png"
import Cosmopolitan from "../assets/images/cosmopolitan.png"
import HRT2 from "../assets/images/hrt2.png"
import Enter from "../assets/images/enter.png"
import VGDanas from "../assets/images/vgdanas.png"
import CityVelikaGorica from "../assets/images/city-velika-gorica.webp"
import EM from "../assets/images/em.png"
import PoslovniFM from "../assets/images/poslovnifm.png"
---

<div
  class="relative isolate overflow-hidden bg-gradient-to-b from-black to-[#1a1312] py-16 sm:py-24"
>
  <div
    class="hidden sm:absolute sm:-top-10 sm:right-1/2 sm:-z-10 sm:mr-10 sm:block sm:transform-gpu sm:blur-3xl"
    aria-hidden="true"
  >
    <div
      class="aspect-1097/845 w-[68.5625rem] bg-linear-to-tr from-gray-400 to-gray-800 opacity-25"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>
  <div
    class="absolute -top-52 left-1/2 -z-10 -translate-x-1/2 transform-gpu blur-3xl sm:top-[-28rem] sm:ml-16 sm:translate-x-0 sm:transform-gpu"
    aria-hidden="true"
  >
    <div
      class="aspect-1097/845 w-[68.5625rem] bg-linear-to-tr from-gray-400 to-gray-800 opacity-25"
      style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
    >
    </div>
  </div>
  <div class="mx-auto px-6 lg:px-8 container scroll-animation">
    <div class="mx-auto mt-10 max-w-2xl lg:mx-0 lg:max-w-none text-center">
      <dl
        class="mt-16 grid grid-cols-1 gap-8 sm:mt-20 sm:grid-cols-2 lg:grid-cols-4"
      >
        <div class="flex flex-col-reverse gap-1">
          <dt class="text-base/7 text-gray-300">Napravljenih tetovaža</dt>
          <dd class="text-4xl font-semibold tracking-tight">5000+</dd>
        </div>
        <div class="flex flex-col-reverse gap-1">
          <dt class="text-base/7 text-gray-300">Uspješnih pierceva</dt>
          <dd class="text-4xl font-semibold tracking-tight">1000+</dd>
        </div>
        <div class="flex flex-col-reverse gap-1">
          <dt class="text-base/7 text-gray-300">Uređenih frizura i brkova</dt>
          <dd class="text-4xl font-semibold tracking-tight">4500+</dd>
        </div>
        <div class="flex flex-col-reverse gap-1">
          <dt class="text-base/7 text-gray-300">Zadovoljnih korisnika</dt>
          <dd class="text-4xl font-semibold tracking-tight">&infin;</dd>
        </div>
      </dl>
    </div>
  </div>
  <div class="logos">
    <div class="logos-slide">
      <div class="img-wrapper cosmopolitan">
        <Image src={Cosmopolitan} alt="cosmopolitan" />
      </div>

      <div class="img-wrapper vgdanas">
        <Image src={VGDanas} alt="vgdanas" />
      </div>
      <div class="img-wrapper hrt2">
        <Image src={HRT2} alt="hrt2" class="h-16 w-auto" />
      </div>
      <div class="img-wrapper enter">
        <Image src={Enter} alt="enter-zagreb" />
      </div>
      <div class="img-wrapper">
        <Image src={CityVelikaGorica} alt="city-velika-gorica" />
      </div>

      <div class="img-wrapper gloria">
        <Image src={Gloria} alt="gloria" />
      </div>
      <div class="img-wrapper poslovnifm">
        <Image src={PoslovniFM} alt="poslovnifm" />
      </div>
      <div class="img-wrapper em">
        <Image src={EM} alt="em" />
      </div>
    </div>

    <div class="logos-slide">
      <div class="img-wrapper cosmopolitan">
        <Image src={Cosmopolitan} alt="cosmopolitan" />
      </div>

      <div class="img-wrapper vgdanas">
        <Image src={VGDanas} alt="vgdanas" />
      </div>
      <div class="img-wrapper hrt2">
        <Image src={HRT2} alt="hrt2" />
      </div>
      <div class="img-wrapper enter">
        <Image src={Enter} alt="enter-zagreb" />
      </div>
      <div class="img-wrapper">
        <Image src={CityVelikaGorica} alt="city-velika-gorica" />
      </div>

      <div class="img-wrapper gloria">
        <Image src={Gloria} alt="gloria" />
      </div>
      <div class="img-wrapper poslovnifm">
        <Image src={PoslovniFM} alt="poslovnifm" />
      </div>
      <div class="img-wrapper em">
        <Image src={EM} alt="em" />
      </div>
    </div>
  </div>
</div>
<style>
  .logos {
    overflow: hidden;
    padding-top: 100px;
    padding-bottom: 30px;
    white-space: nowrap;
    position: relative;
    margin-right: 2px;
  }

  .logos:hover .logos-slide {
    animation-play-state: paused;
  }

  .logos-slide {
    animation: 20s slide infinite linear;
    display: inline-block;
  }

  .img-wrapper {
    position: relative;
    display: inline-block;
    width: 130px;
    height: 50px;
    margin-right: 25px;
  }

  img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    object-fit: contain;
    height: 100%;
    width: 100%;
    width: auto;
  }

  .enter {
    width: 80px;
  }

  .em,
  .hrt2,
  .poslovnifm {
    width: 60px;
  }

  .hrt2 {
    width: 90px;
  }
  .vgdanas {
    width: 160px;
  }

  .poslovnifm {
    width: 140px;
  }
  .cosmopolitan {
    width: 180px;
  }

  @media (min-width: 1100px) {
    .img-wrapper {
      height: 80px;
      width: 180px;
      margin-right: 50px;
    }
    .cosmopolitan {
      width: 270px;
    }
    .vgdanas {
      width: 260px;
    }
    .em {
      width: 110px;
    }
  }

  @media (min-width: 1800px) {
    .img-wrapper {
      height: 100px;
      width: 200px;
      margin-right: 90px;
    }
    .cosmopolitan {
      width: 330px;
    }
    .vgdanas {
      width: 330px;
    }
    .poslovnifm {
      width: 230px;
    }
    .em {
      width: 110px;
    }
  }

  .logos:before,
  .logos:after {
    position: absolute;
    top: 0;
    width: 45px;
    height: 100%;
    content: "";
    z-index: 2;
  }

  .logos:before {
    left: 0;
    background: linear-gradient(
      to left,
      rgba(26, 19, 18, 0),
      rgba(26, 19, 18, 1)
    );
  }

  .logos:after {
    right: 0;
    background: linear-gradient(
      to right,
      rgba(26, 19, 18, 0),
      rgba(26, 19, 18, 1)
    );
  }

  @keyframes slide {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
