---
import { Image } from "astro:assets"
import { Camera } from "lucide-react"

interface Props {
  title: string
  text: string
  imageUrl: any
  instagramUrl: string
  position?: boolean
  pt?: boolean
  instagramText: string
}

const { title, text, imageUrl, instagramUrl, position, pt, instagramText } =
  Astro.props
---

<section
  class=`w-full overflow-hidden bg-black ${pt ? "pt-12" : "pt-0"}  pb-14 `
>
  <div class="container mx-auto px-4">
    <div
      class={`flex flex-col md:flex-row items-center gap-8 ${position ? "" : "md:flex-row-reverse"}`}
    >
      <!-- Slika komponent -->
      <div class="w-full md:w-1/2">
        <div class="overflow-hidden rounded-lg shadow-lg relative">
          <Image
            src={imageUrl}
            alt={title}
            width={800}
            height={800}
            class="hover:scale-105 transition-transform duration-600"
          />
          <div
            class="absolute bottom-1 xl:bottom-6 right-1/4 transform translate-x-1/2 flex items-center"
          >
            <Camera className="inline pr-2 h-5 w-5 md:h-6 md:w-6" />
            <span class="text-xs lg:text-sm">Jeffrey Jemrić</span>
          </div>
        </div>
      </div>

      <!-- Tekstualni sadržaj -->
      <div class="w-full md:w-1/2 space-y-6 scroll-animation">
        <h3
          class="text-2xl md:text-4xl text-gray-100 tracking-wider font-light"
        >
          {title}
        </h3>

        <div
          class="text-gray-100 leading-relaxed space-y-4 text-pretty tracking-wide"
        >
          <p>{text}</p>
        </div>

        <!-- Instagram link -->
        <div class="pt-4">
          <a
            href={instagramUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-pink-600 hover:text-pink-700 transition-colors"
            aria-label="Moj Instagram profil"
          >
            <!-- Instagram ikona (SVG) -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-6 h-6 mr-2"
            >
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"
              ></path>
            </svg>
            {instagramText}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
