---
import GoogleMap from "../components/GoogleMap.astro"
import Layout from "../layouts/Layout.astro"
import KontaktInfo from "../components/KontaktInfo.astro"
import ContactForm from "../components/ContactForm.tsx"
---

<Layout>
  <div class="bg-black text-white p-6 pb-20">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold text-center my-16">Kontakt</h1>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 text-center">
        <div>
          <KontaktInfo />
          <GoogleMap />
        </div>
        <ContactForm client:load />
      </div>
    </div>
  </div>
</Layout>
