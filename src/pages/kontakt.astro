---
import GoogleMap from "../components/GoogleMap.astro"
import Layout from "../layouts/Layout.astro"
import KontaktInfo from "../components/KontaktInfo.astro"
import ContactForm2 from "../components/ContactForm2.tsx"
---

<Layout>
  <div class="min-h-screen bg-black text-white py-12 px-6 relative">
    <!-- overlay -->
    <div
      class="absolute top-0 left-0 w-full h-1/5 bg-gradient-to-b from-[#1a1312] to-transparent"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-full h-1/5 bg-gradient-to-t from-[#1a1312] to-transparent"
    >
    </div>
    <!-- overlay end -->

    <div class="max-w-7xl mx-auto mb-12 scroll-animation">
      <h2 class="text-3xl tracking-wider sm:text-5xl text-center my-20">
        KONTAKT
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 text-center">
        <div>
          <KontaktInfo />
          <GoogleMap />
        </div>
        <ContactForm2 client:load />
      </div>
    </div>
  </div>
</Layout>
